<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context=".PaintMenuFragment">
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clearButton" android:layout_weight="1"/>
    <Button
            android:text="Brush Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/brushSizeButton" android:layout_weight="1"/>
    <Button
            android:text="Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/colorButton" android:layout_weight="1"/>
    <Button
            android:text="undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/undoButton"/>
</LinearLayout>